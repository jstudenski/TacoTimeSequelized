<div id="left"></div>
<div id="right"></div>
<div id="bottom"></div>

<header id="top">
  <h2>TacoTime!</h2>
  <form class="add-taco">
    <button type="submit"><img src="/assets/img/taco.svg" width="35px"></img></button>
    <div class="form-group">
      <input type="text" id="name" name="name" placeholder="Add taco..." />
    </div>
  </form>
</header>

<nav class="cool-header">
  <div class="container">
    <div class="panel">
      <h3>Eat Me!</h3>
    </div>
    <div class="panel">
      <h3>Tacos you've eaten!</h3>
    </div>
  </div>
</nav>

<main class="container">

  <div class="panel">
    {{#each tacos}}
      {{#unless eaten}}
        <div class="taco">
          <div class="taco-title">
            <p>{{this.taco_name}}</p>
          </div>
          <div data-id="{{this.id}}" class="taco-button eatTaco"><p>EAT</p></div>
        </div>
      {{/unless}}
    {{/each}}
  </div>

  <div class="panel">
    {{#each tacos}}
      {{#if eaten}}
        <div class="taco">
          <div class="taco-title">
            <p>{{this.taco_name}}</p>
          </div>
          <div data-id="{{this.id}}" class="taco-button deleteTaco"><div class="icon"><i class="far fa-trash-alt"></i></div></div>
        </div>
      {{/if}}
    {{/each}}
  </div>
  
</main>